<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dialog_background"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/lyout_cust"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@color/blacktransparent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/lyout_update"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:background="?attr/selectableItemBackground"
                android:visibility="visible">

                <TextView
                    android:id="@+id/txtupdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/imageView7"
                    android:text="UPDATE"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="@color/white"
                    card_view:srcCompat="@drawable/ic_update" />

            </RelativeLayout>

            <View
                android:id="@+id/view_upload"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/lyout_update"
                android:background="@color/white" />

            <RelativeLayout
                android:id="@+id/lyout_delete"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/view_upload"
                android:background="?attr/selectableItemBackground"
                android:visibility="visible">

                <TextView
                    android:id="@+id/txtdelete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/imageView8"
                    android:text="DELETE"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    card_view:srcCompat="@drawable/ic_delete" />


            </RelativeLayout>


            <View
                android:id="@+id/view_upload_image"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                android:layout_below="@+id/lyout_delete"
                android:background="@color/white" />

            <RelativeLayout
                android:id="@+id/rl_add_img"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/view_upload_image"
                android:background="?attr/selectableItemBackground"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txt_add_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/iv_add_photo"
                    android:text="ADD PHOTO"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/iv_add_photo"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    card_view:srcCompat="@drawable/ic_add" />


            </RelativeLayout>


            <View
                android:id="@+id/view_copy"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/rl_add_img"
                android:background="@color/white"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/layout_copy"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/view_copy"
                android:background="?attr/selectableItemBackground"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txt_copy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/imageView9"
                    android:text="CREATE AS NEW"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:tint="@color/white"
                    card_view:srcCompat="@drawable/ic_copy" />


            </RelativeLayout>


