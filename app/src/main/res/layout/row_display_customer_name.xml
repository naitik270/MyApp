<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/ll_layout"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="5dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/empty_title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_weight="9"
            android:layout_marginRight="2dp"
            android:textColor="@color/black"
            android:text="NO CATEGORY FOUND!" />


        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:tint="@color/hot_red"
            android:layout_marginEnd="3dp"
            android:src="@drawable/ic_close"/>

    </LinearLayout>

    <TextView
        android:id="@+id/txt_cust_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:paddingTop="5dp"
        android:text="No Category Found!"
        android:textAppearance="?android:textAppearanceMedium"
        android:visibility="gone" />


    <TextView
        android:id="@+id/txt_cust_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:paddingTop="5dp"
        android:text="No Category Found!"
        android:textAppearance="?android:textAppearanceMedium"
        android:visibility="gone" />


    <View
        android:id="@+id/view_upload"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/lyout_frr"
        android:background="@color/product_details" />

</LinearLayout>


