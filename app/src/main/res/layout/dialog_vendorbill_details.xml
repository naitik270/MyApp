<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:background="@android:color/transparent">



    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:padding="5dp"
            android:background="@color/colorPrimaryDark"
            android:text="Apply Filters"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            />

        <RelativeLayout
            android:id="@+id/lyout_frr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:visibility="visible">

            <TextView
                android:id="@+id/txt_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="5dp"
                android:background="@color/lightgray"
                android:text="Transaction Date"
                android:textSize="17dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/txt_date"
                android:background="#ADCCE2" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/from_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#0000"
                android:drawableTint="@color/unitcolor"
                android:drawableRight="@drawable/ic_date_range_black_24dp"
                android:hint="From"
                android:inputType="textFilter|textCapCharacters"
                android:textAllCaps="true"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/to_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#0000"
                android:drawableRight="@drawable/ic_date_range_black_24dp"
                android:hint="To "
                android:layout_marginLeft="2dp"
                android:drawableTint="@color/unitcolor"
                android:inputType="textFilter|textCapCharacters"
                android:textAllCaps="true"
                android:textColor="#000000" />




        </LinearLayout>
        <RelativeLayout
            android:id="@+id/layout_vendor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <TextView
                android:id="@+id/txt_vendor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/lightgray"
                android:drawableEnd="@drawable/ic_arrow_drop_down_black_24dp"
                android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                android:padding="5dp"
                android:text="Select/Change Vendor"
                android:textSize="17dp"
                />



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/txt_vendor"
                android:background="#ADCCE2" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:layout_below="@+id/lyout_frr"-->
            <!--android:background="@color/colorPrimaryDark" />-->


            <TextView
                android:id="@+id/selected_vendor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="5dp"
                android:textSize="18dp"
                />

            <ImageButton
                android:id="@+id/cancel_vendor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/trans"
                android:layout_gravity="center"
                android:tint="@color/unitcolor"
                android:layout_marginRight="5dp"
                app:srcCompat="@drawable/ic_close_black_24dp"/>


        </LinearLayout>


        <RelativeLayout
            android:id="@+id/layout_expensetype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <TextView
                android:id="@+id/txt_expensetype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/lightgray"
                android:drawableEnd="@drawable/ic_arrow_drop_down_black_24dp"
                android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                android:padding="5dp"
                android:text="Select/Change Expense Type"
                android:textSize="17dp"
                />



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/txt_expensetype"
                android:background="#ADCCE2" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:layout_below="@+id/lyout_frr"-->
            <!--android:background="@color/colorPrimaryDark" />-->


            <TextView
                android:id="@+id/selected_expensetype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="5dp"
                android:textSize="18dp"
                />

            <ImageButton
                android:id="@+id/cancel_expensetype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/trans"
                android:layout_gravity="center"
                android:tint="@color/unitcolor"
                android:layout_marginRight="5dp"
                app:srcCompat="@drawable/ic_close_black_24dp"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_receipt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <TextView
                android:id="@+id/txt_rec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/lightgray"
                android:padding="5dp"
                android:text="Receipt No"
                android:textSize="17dp"
                />



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/txt_rec"
                android:background="#ADCCE2" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/edt_rec_no"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content" />


            <ImageButton
                android:id="@+id/rec_clear"
                app:srcCompat="@drawable/ic_close_black_24dp"
                android:background="@color/trans"
                android:tint="@color/unitcolor"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <TextView
            android:id="@+id/vendor_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="18dp"
            android:visibility="gone"
            android:text="" />

        <TextView
            android:id="@+id/expensetype_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="18dp"
            android:visibility="gone"
            android:text="" />





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_gravity="end"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@color/trans"
                android:text="Search" />

            <Button
                android:id="@+id/btn_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:textColor="@color/white"
                android:background="@color/trans"
                android:text="Clear" />
        </LinearLayout>
    </LinearLayout>


    <!--<ImageView-->
    <!--android:layout_width="50dp"-->
    <!--android:layout_height="50dp"-->
    <!--android:layout_centerHorizontal="true"-->
    <!--android:layout_marginTop="10"-->
    <!--android:src="@drawable/filter" />-->
</RelativeLayout>