<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/txt_sales_sms_receiver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/toolColor"

                android:padding="2dp"
                android:text="SALES SMS COPY RECEIVER"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edt_mobile_no_sales_receiver"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cust_edit_text"
                    android:hint="PHONE NO"
                    android:layout_weight="9"
                    android:inputType="phone"
                    android:layout_marginEnd="10dp"
                    android:maxLength="10"
                    android:paddingStart="5dp"
                    tools:ignore="RtlSymmetry" />


                <ImageButton
                    android:id="@+id/iv_clear_phone_sale"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/cust_edit_text"
                    android:src="@drawable/ic_close"
                    android:tint="@color/colorPrimary" />

            </LinearLayout>




            <TextView
                android:id="@+id/txt_quotation_sms_receiver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/toolColor"
                android:padding="2dp"
                android:text="QUOTATION SMS COPY RECEIVER"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edt_qsr"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cust_edit_text"
                    android:hint="PHONE NO"
                    android:layout_weight="9"
                    android:inputType="phone"
                    android:layout_marginEnd="10dp"
                    android:maxLength="10"
                    android:paddingStart="5dp"
                    tools:ignore="RtlSymmetry" />


                <ImageButton
                    android:id="@+id/iv_clear_phone_quotation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/cust_edit_text"
                    android:src="@drawable/ic_close"
                    android:tint="@color/colorPrimary" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/lyout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:fitsSystemWindows="true">


        <Button
            android:id="@+id/btn_apply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@color/colorPrimaryDark"
            android:padding="2dp"
            android:text="Apply"
            android:textColor="@color/white"
            android:textSize="20dp" />


    </LinearLayout>


</RelativeLayout>